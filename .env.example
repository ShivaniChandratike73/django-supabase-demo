# Copy this to .env and fill in values

# Secret key for Django
SECRET_KEY=change-me-please-unsafe

# For Supabase/Render/any Postgres: full database URL in the standard format
# e.g. postgresql://postgres:YOUR_PASSWORD@YOUR_HOST:5432/postgres?sslmode=require
DATABASE_URL=

# Set DEBUG=0 in production
DEBUG=1

# Allowed hosts: comma-separated hostnames (Render/railway etc.). For local dev keep as localhost
ALLOWED_HOSTS=localhost,127.0.0.1
